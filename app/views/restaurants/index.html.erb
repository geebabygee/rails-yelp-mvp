<h1>Restaurants</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.address %></td>
      <td><%= restaurant.phone_number %></td>
      <td><%= restaurant.category %></td>
      <td><%= link_to 'Show', restaurant %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %>




  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
      <%= link_to restaurant do  %>
        <div class="food-card">
          <div class="card">
            <div class="card-img image-ratio">
              <div class="ratio-inner"><img src="https://images.unsplash.com/photo-1540202404-69f85b6fd934?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=f32a6a0e6c12add815a8c5a3ff0476e5&auto=format&fit=crop&w=787&q=80" alt=""></div>
            </div>
            <div class="card-content">
              <div class="content">
                <h3 class="title"><%= restaurant.name %></h3>
                <p class="description">
                 <ul>
                  <li>Address:<%=restaurant.address%></li>
                  <li>Phone: <%=restaurant.phone_number%></li>
                  <li>Category: <%=restaurant.category%></li>
                 </ul>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>

 </div>
